{
  "hosting": {
    "public": "dist/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "yarn run build"
    ]
  },
  "functions": [
    {
      "runtime": "nodejs16",
      "source": "server",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "yarn --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
