{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "strict": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "paths": {
      //"@utils/*": ["src/utils/*"]
    },
    "skipLibCheck": true,
  }, 
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
